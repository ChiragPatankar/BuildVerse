{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "styles/**/*.ts",
    "styles/**/*.tsx",
    "functions/**/*.ts",
    "functions/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "functions",
    "buildverse-flowforge",
    "buildverse-flowforge/**",
    "**/buildverse-flowforge/**"
  ]
}
